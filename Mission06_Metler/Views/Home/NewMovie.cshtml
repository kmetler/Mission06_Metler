@{
    ViewData["Title"] = "Add New Movie";
}

<h1>Add New Movie</h1>

<form>
    <label>Category:</label>
    <input required/>
    <br />
    <label>Title:</label>
    <input required/>
    <br />
    <label>Year:</label>
    <input required/>
    <br />
    <label>Director:</label>
	<input required/>
    <br />
    <label>Rating:</label>
	<select required>
		<option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
	</select>
    <br />
    <label>Edited:</label>
    <select>
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br />
    <label>Lent To:</label>
    <input />
    <br />
    <label>Notes:</label>
    <input maxlength="25"/>
    <br />
    <button type="submit">Submit</button>
</form>